<%= javascript_pack_tag 'toastr_pack', "data-turbo-track": "reload" %>
<% unless flash.empty? %>
   <script type="text/javascript">
      <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
     toastr['<%= type %>']('<%= f[1] %>', '', {
      "closeButton": true,
      "showDuration": "300", 
      "hideDuration": "1000", 
      "progressBar": true
     });
   <% end %>
   </script>
<% end %>