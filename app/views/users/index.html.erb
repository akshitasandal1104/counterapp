
<style>
	nav.navbar img {
		width: 100%;
		max-width: 180px;
	}
	nav.navbar {
		border-bottom: 2px solid #efefef;
	}
	.submit-main{
		height: 90vh;
		display: flex;
	}
	.inner-div {
		margin: auto;
	}
	.inner-div button.sub-btn, .inner-div button.sub-btn:focus, .inner-div button.sub-btn:active, .inner-div button.sub-btn:active:focus {
		background-color: transparent;
		color: #009e90;
		border: 1px solid #d9d6d6;
		text-transform: uppercase;
		font-size: 24px;
		letter-spacing: 1px;
		border-radius: 0px;
		box-shadow:none !important;
		outline:none;
	}
	.submit-email-modal .modal-content {
		padding: 50px 80px;
		border: none;
	}
	.submit-email-modal form input.btn-input {
		background-color: #009e90;
		color: #fff;
		margin: 0 auto;
		display: block !important;
		padding: 10px 17px;
	}
	.submit-email-modal form input {
		height: 48px;
		font-size: 19px;
	}
</style>
<div class="submit-main">
	<div class="inner-div"> <!-- Button trigger modal -->
		<button type="button" class="btn btn-primary sub-btn" data-toggle="modal" data-target="#exampleModalCenter">
			Submit Email
		</button>
		<!-- Modal -->
		<div class="modal fade submit-email-modal" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-body">
						<%= form_with(model: User.new, class: "contents") do |f| %>
							<div class="form-group">
								<%= f.text_field :email, required: true, class: "form-control", id: "exampleInputEmail", placeholder: "Enter email"%>
							</div>
							<%= f.submit "Go", class: "btn btn-input" %>
						<%end%>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>